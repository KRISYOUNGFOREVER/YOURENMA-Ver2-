/* pages/chat/chat.wxss */
/* 整体容器 */
.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #f8fffe 0%, #f0f9ff 100%);
}

/* 顶部导航栏 */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.03);
}

.header-left, .header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-back {
  font-size: 40rpx;
  color: #10b981;
  font-weight: bold;
}

.header-center {
  flex: 1;
  text-align: center;
}

.user-nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
}

.user-status {
  font-size: 22rpx;
  color: #6b7280;
  margin-top: 4rpx;
  display: block;
}

.header-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(16, 185, 129, 0.1);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-btn .icon {
  font-size: 28rpx;
}

/* 消息列表 */
.messages-list {
  flex: 1;
  padding: 20rpx;
  background: transparent;
}

.load-more-tip {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

.time-divider {
  text-align: center;
  margin: 30rpx 0;
}

.time-divider text {
  background: rgba(255, 255, 255, 0.8);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #6b7280;
  backdrop-filter: blur(10rpx);
}

/* 消息项 */
.message-wrapper {
  display: flex;
  margin-bottom: 24rpx;
  align-items: flex-end;
  animation: messageSlide 0.3s ease-out;
}

@keyframes messageSlide {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-wrapper.sent {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin: 0 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.message-content {
  max-width: 60%;
  display: flex;
  flex-direction: column;
}

.message-wrapper.sent .message-content {
  align-items: flex-end;
}

/* 引用消息 */
.quoted-msg {
  background: rgba(16, 185, 129, 0.1);
  border-left: 4rpx solid #10b981;
  padding: 12rpx 16rpx;
  margin-bottom: 8rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #374151;
}

/* 消息气泡 */
.message-bubble {
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  position: relative;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.bubble-sent {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  border-bottom-right-radius: 8rpx;
}

.bubble-received {
  background: rgba(255, 255, 255, 0.95);
  color: #1f2937;
  border-bottom-left-radius: 8rpx;
  border: 1rpx solid rgba(16, 185, 129, 0.1);
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
}

/* 语音消息 */
.voice-msg {
  display: flex;
  align-items: center;
  min-width: 200rpx;
  gap: 16rpx;
}

.voice-icon {
  font-size: 32rpx;
}

.voice-waves {
  display: flex;
  gap: 4rpx;
  align-items: center;
}

.wave {
  width: 4rpx;
  height: 20rpx;
  background: currentColor;
  border-radius: 2rpx;
  animation: wave 1s infinite ease-in-out;
}

.wave:nth-child(2) {
  animation-delay: 0.1s;
}

.wave:nth-child(3) {
  animation-delay: 0.2s;
}

@keyframes wave {
  0%, 40%, 100% {
    transform: scaleY(0.4);
  }
  20% {
    transform: scaleY(1);
  }
}

.voice-duration {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 消息状态 */
.message-status {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 8rpx;
  gap: 8rpx;
}

.status-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

.status-icon {
  font-size: 20rpx;
}

.status-icon.sending {
  color: #fbbf24;
}

.status-icon.sent {
  color: #34d399;
}

.status-icon.read {
  color: #60a5fa;
}

/* 超出范围警告 */
.range-warning {
  text-align: center;
  padding: 30rpx;
  background: rgba(251, 191, 36, 0.1);
  border: 2rpx solid rgba(251, 191, 36, 0.3);
  border-radius: 16rpx;
  margin: 20rpx;
}

.warning-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.warning-text {
  font-size: 26rpx;
  color: #d97706;
  font-weight: 500;
}

/* 引用回复条 */
.reply-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 16rpx 30rpx;
  border-top: 1rpx solid rgba(16, 185, 129, 0.2);
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.reply-line {
  width: 6rpx;
  height: 40rpx;
  background: #10b981;
  border-radius: 3rpx;
}

.reply-info {
  flex: 1;
}

.reply-label {
  font-size: 22rpx;
  color: #10b981;
  font-weight: 600;
  display: block;
}

.reply-content {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.reply-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(239, 68, 68, 0.1);
  border: none;
  color: #ef4444;
  font-size: 24rpx;
}

/* 底部输入栏 */
.input-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  padding: 16rpx 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.03);
}

.input-left, .input-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;  /* 防止被压缩 */
}

.input-center {
  flex: 1;
  max-width: calc(100% - 200rpx);  /* 为左右按钮预留空间 */
  min-width: 200rpx;  /* 确保输入框有最小宽度 */
}

.input-wrapper {
  position: relative;
  width: 100%;
}

.text-input {
  width: 100%;
  min-height: 72rpx;
  max-height: 200rpx;
  padding: 16rpx 20rpx;
  background: #f9fafb;
  border: 2rpx solid rgba(16, 185, 129, 0.2);
  border-radius: 36rpx;
  font-size: 28rpx;
  color: #1f2937;
  transition: all 0.3s ease;
  box-sizing: border-box;  /* 确保padding不会增加总宽度 */
}

.text-input:focus {
  border-color: #10b981;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(16, 185, 129, 0.1);
}

/* 功能按钮 */
.func-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  flex-shrink: 0;  /* 防止按钮被压缩 */
}

/* 发送按钮 */
.send-btn {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border: none;
  border-radius: 36rpx;
  padding: 16rpx 32rpx;
  min-width: 120rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
  transition: all 0.3s ease;
  flex-shrink: 0;  /* 防止发送按钮被压缩 */
}

.send-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 12rpx rgba(16, 185, 129, 0.4);
}

.send-btn:disabled {
  background: #d1d5db;
  box-shadow: none;
}

.send-text {
  font-size: 28rpx;
  color: white;
  font-weight: 600;
}

/* 录音状态 */
.recording-status {
  position: absolute;
  top: -120rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  backdrop-filter: blur(10rpx);
}

.recording-dot {
  width: 12rpx;
  height: 12rpx;
  background: #ef4444;
  border-radius: 50%;
  animation: recordBlink 1s infinite;
}

@keyframes recordBlink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.3; }
}

.recording-text {
  font-size: 26rpx;
  font-weight: 600;
}

.recording-tip {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 更多功能面板 */
.more-panel {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.more-options {
  display: flex;
  gap: 40rpx;
  justify-content: center;
}

.option-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  background: transparent;
  border: none;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.option-btn:active {
  background: rgba(16, 185, 129, 0.1);
  transform: scale(0.95);
}

.option-icon {
  font-size: 48rpx;
}

.option-text {
  font-size: 22rpx;
  color: #6b7280;
}

/* 夜间模式 */
.dark-mode .chat-container {
  background: linear-gradient(180deg, #1f2937 0%, #111827 100%);
}

.dark-mode .chat-header {
  background: rgba(31, 41, 55, 0.95);
  border-bottom-color: rgba(255, 255, 255, 0.1);
}

.dark-mode .user-nickname {
  color: #f9fafb;
}

.dark-mode .user-status {
  color: #9ca3af;
}

.dark-mode .bubble-received {
  background: rgba(55, 65, 81, 0.95);
  color: #f9fafb;
  border-color: rgba(16, 185, 129, 0.3);
}

.dark-mode .text-input {
  background: #374151;
  color: #f9fafb;
  border-color: rgba(16, 185, 129, 0.3);
}

.dark-mode .text-input:focus {
  background: #4b5563;
}

.dark-mode .input-bar {
  background: rgba(31, 41, 55, 0.95);
  border-top-color: rgba(255, 255, 255, 0.1);
}

.dark-mode .time-divider text {
  background: rgba(55, 65, 81, 0.8);
  color: #9ca3af;
}