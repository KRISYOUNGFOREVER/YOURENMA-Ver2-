.avatar {
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border: 2px solid white;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

.avatar-container {
  display: inline-block;
  overflow: hidden;
  position: relative;
}

.avatar-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 尺寸 */
.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

.avatar-medium {
  width: 80rpx;
  height: 80rpx;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

/* 形状 */
.circle {
  border-radius: 50%;
}

.square {
  border-radius: 8rpx;
}

/* 边框 */
.with-border {
  border: 2rpx solid #e0e0e0;
}

/* 可点击 */
.clickable {
  cursor: pointer;
  transition: transform 0.2s;
}

.clickable:active {
  transform: scale(0.95);
}

.avatar-text {
  color: white;
  font-size: 20px;
  font-weight: bold;
}